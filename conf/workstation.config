executor {
    queueSize = 10
}

conda {
    useMamba = true
}

pprocess {
  cpus = 4
  memory = 8.GB

  // High-memory GATK processes
  withName: '.*GATK_VARIANT_RECALIBRATOR.*' {
    cpus = 8
    memory = 48.GB
  }
  withName: '.*GATK_MARK_DUPLICATES.*' {
    cpus = 8
    memory = 16.GB
  }
  withName: '.*GATK_HAPLOTYPE_CALLER.*' {
    cpus = 8
    memory = 16.GB
  }
  withName: '.*SAMTOOLS_MERGE.*' {
    cpus = 4
    memory = 12.GB
  }

  // Phylogenetics
  withName: 'IQTREE.*' {
    cpus = 4
    memory = 4.GB
  }

  // Lofreq 
  withName: '.*LOFREQ.*' {
    cpus = 2
    memory = 2.GB
  }

  // Samtools 
  withName: '.*SAMTOOLS.*' {
    cpus = 2
    memory = 2.GB
  }

  // QC
  withName: 'FASTQC' {
    cpus = 2
    memory = 2.GB
  }
  withName: 'MULTIQC' {
    cpus = 1
    memory = 4.GB
  }
}

